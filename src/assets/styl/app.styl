@import './element.styl'

body,html
    width:100%
    height:100%
    font-size:15px
    overflow-x: hidden
*
    margin:0
    padding:0
    list-style:none
i,em,b
    font-style:normal
    font-weight:normal
input,textarea,select
    -webkit-appearance:none
    border:0
    background:transparent
button,input,input[type=button]:focus
    overflow visible
    outline none
    border 0
    -webkit-tap-highlight-color:rgba(0,0,0,0)
input,a,span
    -webkit-tap-highlight-color:rgba(0,0,0,0)
a
    text-decoration none
    color #666
#app
    display:-webkit-box
    -webkit-box-orient:vertical
    height:100%

.display-enter,.display-leave-active
    opacity: 0
.display-enter-active,.display-leave
    transition: all .5s ease
    -moz-transition: all .5s ease
    -webkit-transition: all .5s ease
    -o-transition: all .5s ease


// login
.login
    height 100%
    background-color #f7f4f4
    position relative
    .model
        position absolute
        top 40%
        left 50%
        background-color #fff
        border-radius 8px
        transform: translate(-50%, -50%)
        box-shadow: 0 0 10px #ddd
        .box
            width 350px
            padding 10px
            min-height 200px
    .el-form
        width 280px
        margin 0 auto
        button
            width 100%
            margin-top: 17px
    h3
        color: #6b6b6b
        font-weight: 400
        font-size: 16px
        text-align: center
        margin: 15px auto 35px
.layout
    width 100%
    height 100%
    position relative
    .view-head
        position: absolute
        left: 0
        top: 0
        z-index: 9
        width: 100%
        height: 55px
        background-color: green
        display: flex
        align-items: center
        justify-content: space-between
        .view-head-left
            display: flex
            align-items: center
            justify-content: flex-end
            padding: 0 10px
         .view-head-right
            display: flex
            align-items: center
            justify-content: flex-end
            width:200px
            padding: 0 10px
            span{
                color:#fff
            }
    .layout-cont
        position fixed
        top 55px
        left:0
        right 0
        bottom 0
        .left
            width 200px
            position absolute
            top 0
            left 0
            bottom 0
            overflow-y: auto
            transition all .3s
            .menu
                width: 200px
        .right
            background-color: #F0F0F0
            transition all .3s
            position absolute
            top 0
            right 0
            bottom 0
            left 200px
        .view-nav
            background-color: #fff
            margin: 5px 10px
            padding: 7px 10px
            border-radius: 4px
            height: 40px
        .view-con
            // height: 100%
            background-color: #fff
            margin: 5px 10px 10px 10px
            border-radius: 4px
            box-shadow: 0 0 10px #ddd
            padding: 10px
            position: absolute
            bottom: 0
            right: 0
            left: 0
            top: 0
            overflow-y: auto
   
